# FROM node:16.16.0
# COPY . /app
# WORKDIR /app
# EXPOSE 8000

# RUN npm install --location=global npm@8

# RUN npm install


# 使用 Node.js 的基本映像
FROM node:16.16.0

# 創建 app 目錄並設定為工作目錄
RUN mkdir /appd kWORKDIR /app

# 複製 package.json 和 package-lock.json 到容器中的 /app/
COPY package*.json /app/

# 安裝 Node.js 依賴性
RUN npm install

# 複製當前目錄的所有文件和目錄到容器中的 /app/
COPY . /app/

# 指定容器运行的命令为 Vue CLI 的服务命令
CMD ["npm", "run", "serve"]
